button
    background-color: rgb(69, 168, 210)
    border: none
    border-radius: 10px
    padding: 20px
    color: white
    cursor: pointer
    min-width: 200px

    &:hover
        opacity: 0.7

    &:active
        background-color: rgb(0, 98, 139)

.nav
    display: grid
    grid-template-columns: repeat(3, 1fr)
    justify-items: center
    align-items: center

.add-code-block
    display: grid

@media (max-width: 850px)
    .nav
        grid-template-columns: 1fr
        grid-template-rows: repeat(3, 70px)
